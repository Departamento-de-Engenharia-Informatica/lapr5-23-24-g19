@startuml
autonumber

actor "Fleet Manager" as usr

participant "<<system>>\n System RobDroneGo" as sys

activate usr
    usr -> sys : create robot
    activate sys
        sys --> usr : requests data
    deactivate sys

    usr -> sys : provides data
    activate sys
    alt success
        sys --> usr : previews created robot
    else error
        sys --> usr : informs error
    end
    deactivate sys
deactivate usr

@enduml
