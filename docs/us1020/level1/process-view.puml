@startuml
autonumber

actor "Campus Manager" as usr

participant "<<system>>\n System RobDroneGo" as sys

activate usr
    usr -> sys : inhibit robot
    activate sys
        sys --> usr : show available robots
    deactivate sys

    usr -> sys : chooses robot
    activate sys
        sys --> usr : inform error/success
    deactivate sys
deactivate usr

@enduml
