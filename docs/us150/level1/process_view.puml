@startuml
autonumber

actor " " as actor
participant "<<system>>\nSystem RobDroneGo" as sys

activate actor
    actor -> sys: POST /building

    activate sys
    alt building not created
        sys --> actor : 422: Unprocessable Content
    else building created successfully
        sys --> actor : 201: Created
    end
    deactivate sys
deactivate actor


@enduml
