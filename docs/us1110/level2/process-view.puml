@startuml
autonumber

actor "Campus Manager" as usr

participant "Campus Management" as mgm

activate usr
    usr -> mgm : edit floor
    activate mgm
        mgm --> usr : requests data
    deactivate mgm

    usr -> mgm : provides data
    activate mgm
        alt success
            mgm --> usr : previews edited floor information
        else error
            mgm --> usr : informs error
        end
    deactivate mgm
deactivate usr

@enduml
